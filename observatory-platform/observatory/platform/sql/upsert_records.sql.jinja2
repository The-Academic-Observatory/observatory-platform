MERGE `{{ main_table_id }}` main_table
USING `{{ upsert_table_id }}` upsert_table
ON main_table.{{ primary_key }} = upsert_table.{{ primary_key }}
WHEN MATCHED THEN
  UPDATE SET
    {% for col in columns %}
    main_table.{{ col }}=upsert_table.{{ col }}{% if not loop.last %},{% endif %}
    {% endfor %}
WHEN NOT MATCHED THEN
  INSERT ROW