SELECT
  id,
  name,
  country,
  country_code,
  region,
  subregion,
  coordinates,
  DATE(years.published_year, 12, 31) AS published_year,
  output_types.output_type,
  output_types.total,
  output_types.oa,
  output_types.green,
  output_types.gold,
  output_types.gold_just_doaj,
  output_types.hybrid,
  output_types.bronze,
  output_types.green_only
FROM
  `{{ project_id }}.{{ dataset_id }}.{{ table_name }}`, UNNEST(years) AS years, UNNEST(output_types) as output_types
ORDER BY id, published_year ASC