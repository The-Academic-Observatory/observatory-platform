SELECT
    ISBN13 as product_id,
    MAX(work_id) as work_id,
    MAX(work_family_id) as work_family_id,
    MAX(onix.title) as title,
    CAST(MAX(onix.published_year) as INT64) as published_year,
    month.month,
    NET.HOST(referrer.name) as referrer,
    STRUCT(
        SUM(referrer.value) as value
    ) as google_analytics,
FROM `{{ project_id }}.{{ dataset_id }}.book_product{{ release.strftime('%Y%m%d') }}`, UNNEST(months) as month, UNNEST(month.google_analytics.unique_views.referrer) as referrer
WHERE referrer IS NOT NULL AND referrer.name != "(direct)"
GROUP BY ISBN13, month, referrer