SELECT
    ISBN13,
    month.month,
    NET.HOST(referrer.name) as referrer,
    STRUCT(
        SUM(referrer.value) as value
    ) as google_analytics,
FROM `oaebu-anu-press.oaebu.book_product`, UNNEST(months) as month, UNNEST(month.google_analytics.unique_views.referrer) as referrer
WHERE referrer IS NOT NULL AND referrer.name != "(direct)"
GROUP BY ISBN13, month, referrer