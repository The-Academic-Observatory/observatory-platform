WITH orig_wid AS (
SELECT
    orig.*, wid.work_id
FROM
    `{{ project_id }}.{{ orig_dataset }}.{{ orig_table }}` orig
LEFT JOIN
    `{{ project_id }}.{{ onix_workflow_dataset }}.{{ wid_table }}` wid
ON
    orig.{{ orig_isbn }} = wid.isbn13
)

SELECT
    orig_wid.*, wfam.work_family_id
FROM
    orig_wid
LEFT JOIN
    `{{ project_id }}.{{ onix_workflow_dataset }}.{{ wfam_table }}` wfam
ON
    orig_wid.{{ orig_isbn }} = wfam.isbn13