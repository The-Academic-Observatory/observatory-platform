SELECT
  Level,
  Year,
  COUNT(Year) as {{ count }}
FROM
  `{{ project_id }}.{{ dataset_id }}.Papers{{ ts }}` pap
LEFT JOIN
  `{{ project_id }}.{{ dataset_id }}.PaperFieldsOfStudy{{ ts }}` as pfos
ON
  pap.PaperId = pfos.PaperId
LEFT JOIN
  `{{ project_id }}.{{ dataset_id }}.FieldsOfStudy{{ ts }}` as fos
ON
  pfos.FieldOfStudyId = fos.FieldOfStudyId
WHERE
  Year >= {{ year }}
GROUP BY
  Level,
  Year
ORDER BY
  Level,
  Year
