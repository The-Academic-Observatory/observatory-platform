SELECT
  FieldOfStudyID,
  Year,
  COUNT(Year) as {{ count }}
FROM
  `{{ project_id }}.{{ dataset_id }}.Papers{{ ts }}` as paper
LEFT JOIN
  `{{ project_id }}.{{ dataset_id }}.PaperFieldsOfStudy{{ ts }}` as pfos
ON
  paper.PaperId = pfos.PaperId
WHERE
  FieldOfStudyID IN {{ fos_id }}
  {% if year %}
    AND Year >= {{ year }}
  {% endif %}
GROUP BY
  FieldOfStudyID,
  Year
ORDER BY
  FieldOfStudyID,
  Year
